<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llEditor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context=".StartPip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/TopView_height"
        android:background="@drawable/top_bg_text_bg" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/top_bg_with_text"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btnStart"
            android:layout_width="@dimen/Startbtn_width"
            android:layout_height="@dimen/Startbtn_height"
            android:background="@drawable/startxml"
            android:contentDescription="@null" />
    </LinearLayout>

</LinearLayout>